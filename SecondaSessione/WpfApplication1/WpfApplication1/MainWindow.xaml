<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="4.5*"></RowDefinition>
            <RowDefinition Height="4.5*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Button Height="50" Width="100" Margin="10">Click 1</Button>
            <Button Height="50" Width="100" Margin="10">Click 2</Button>
            <Button Height="50" Width="100" Margin="10">Click 3</Button>
            <Button Height="50" Width="100" Margin="10">Click 4</Button>
        </StackPanel>
        
    </Grid>
</Window>
